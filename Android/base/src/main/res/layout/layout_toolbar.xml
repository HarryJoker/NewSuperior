<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_toolbar"
    android:background="@drawable/shape_primary_color"
    android:orientation="vertical">

    <LinearLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:elevation="@dimen/dp_1">

            <ImageView
                android:id="@+id/iv_base_bar_arrow"
                android:maxWidth="@dimen/dp_25"
                android:maxHeight="@dimen/dp_25"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_arrow_back"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_base_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="博兴政务督查"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_18" />

            <com.first.orient.base.view.ImageTextView
                android:id="@+id/itv_base_bar_fun"
                android:layout_width="wrap_content"
                android:paddingRight="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center_vertical|end"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_bar_divider"
            android:elevation="@dimen/dp_1"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@android:color/white" />
    </LinearLayout>

</LinearLayout>