<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.unit.masses.livelihood.TaskVoteActivity">

    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:rv_cornerRadius="@dimen/dp_5"
        app:rv_strokeColor="@color/avatar_default_border"
        app:rv_strokeWidth="@dimen/dp_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问题类型："
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="全县有到位资金的招商引资项目14个，认定到位资金8.77亿元。其中，新建项目2个，续建项目12个。今年新批2家外资企业：滨州尤科生物科技有限公司和山东美可达电子影像有限公司。"
                android:textColor="@color/dimgrey"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="具体描述："
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全县有到位资金的招商引资项目14个，认定到位资金8.77亿元。其中，新建项目2个，续建项目12个。今年新批2家外资企业：滨州尤科生物科技有限公司和山东美可达电子影像有限公司。"
                android:textColor="@color/dimgrey"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </com.flyco.roundview.RoundLinearLayout>


    <com.flyco.roundview.RoundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:rv_cornerRadius="@dimen/dp_5"
        app:rv_strokeColor="@color/avatar_default_border"
        app:rv_strokeWidth="@dimen/dp_1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投票排名："
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="王xxx"
                android:textColor="@color/dimgrey"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总票数量："
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_vote_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="2020-08-12 15:34:56"
                android:textColor="@color/dimgrey"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投票占比："
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2020-08-12 15:34:56"
                android:textColor="@color/dimgrey"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </LinearLayout>
    </com.flyco.roundview.RoundLinearLayout>


    <com.flyco.roundview.RoundLinearLayout
        android:id="@+id/layout_explan"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:rv_cornerRadius="@dimen/dp_5"
        app:rv_strokeColor="@color/avatar_default_border"
        app:rv_strokeWidth="@dimen/dp_1">

        <TextView
            android:id="@+id/tv_explan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="该意见事项已截止投票"
            android:textColor="@color/colorPrimary" />
    </com.flyco.roundview.RoundLinearLayout>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/tv_new_vote"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="@dimen/dp_20"
        android:gravity="center"
        android:visibility="gone"
        android:text="投票"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:rv_backgroundColor="@color/colorPrimary"
        app:rv_backgroundPressColor="@color/colorPrimaryDark"
        app:rv_cornerRadius="@dimen/dp_5" />


</LinearLayout>
