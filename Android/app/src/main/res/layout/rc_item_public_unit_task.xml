        <!--            android:textSize="@dimen/sp_13" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进展通报："
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_good_status_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="当前进展缓慢"
                android:textColor="@color/dimgrey"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通报时间："
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_good_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2020-08-22 18:33:34"
                android:textColor="@color/dimgrey"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="责任单位："
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_good_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="文化局"
                android:textColor="@color/dimgrey"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
