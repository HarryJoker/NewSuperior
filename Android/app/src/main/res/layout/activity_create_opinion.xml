<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_15"
    tools:context=".ui.unit.masses.supervise.CreateClueActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="end"
                android:text="问题分类：" />

            <RadioGroup
                android:id="@+id/rg_opinion_types"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="城市基础建设问题" />

                <RadioButton
                    android:id="@+id/rb_education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教育卫生问题" />

                <RadioButton
                    android:id="@+id/rb_economic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经济发展问题" />

                <RadioButton
                    android:id="@+id/rb_road"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="道路提升问题" />

                <RadioButton
                    android:id="@+id/rb_culture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文化旅游问题" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="right"
                android:text="具体描述：" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/shape_border"
                android:hint="请填写问题描述"
                android:lines="7"
                android:maxLines="10"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="right"
                android:text="您的姓名：" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/shape_border"
                android:hint="请填写您的姓名"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="right"
                android:text="联系电话：" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/shape_border"
                android:hint="请填写您的手机号码"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/tv_get_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:rv_backgroundColor="@color/colorPrimary"
                app:rv_backgroundPressColor="@color/colorPrimaryDark"
                app:rv_cornerRadius="@dimen/dp_3" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="right"
                android:text="验证码：" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/shape_border"
                android:hint="请填写验证码"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>


        <com.flyco.roundview.RoundTextView
            android:id="@+id/tv_new_clue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_30"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:rv_backgroundColor="@color/colorPrimary"
            app:rv_backgroundPressColor="@color/colorPrimaryDark"
            app:rv_cornerRadius="@dimen/dp_5" />

    </LinearLayout>
</ScrollView>