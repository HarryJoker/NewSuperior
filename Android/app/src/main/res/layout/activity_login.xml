<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="请等待审核过后，才能登录使用"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码："
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_codebtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#dddddd"
            android:clickable="true"
            android:gravity="center"
            android:onClick="codeViewClick"
            android:padding="6dp"
            android:text="获取验证码"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:gravity="center"
        android:onClick="loginViewClick"
        android:padding="15dp"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp_20"
        android:onClick="registerViewClick"
        android:padding="5dp"
        android:text="还没有账号？去注册>>"
        android:textColor="@color/colorPrimary"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sp_20"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gesturelogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="gestureLockViewClick"
            android:padding="5dp"
            android:text="手势登录"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_split"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="|"
            android:textColor="#cac7c7"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="acountLoginClick"
            android:padding="5dp"
            android:text="账号登录"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

</LinearLayout>
