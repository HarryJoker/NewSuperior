<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:background="@color/dimgray"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="1dp"
                android:layout_height="0dp" />

            <ImageView
                android:background="@mipmap/icon_star"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            <TextView android:background="@color/dimgray"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal"
                android:layout_width="1dp"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <TextView android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:text="经济开发区投资，完善设施拼图，积累经验提高战斗力"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView android:id="@+id/tv_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="全县有到位资金的招商引资项目14个，认定到位资金8.77亿元。其中，新建项目2个，续建项目12个。今年新批2家外资企业：滨州尤科生物科技有限公司和山东美可达电子影像有限公司。"
                android:textColor="@color/darkgrey"
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>


    <TextView android:background="@color/darkgray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>