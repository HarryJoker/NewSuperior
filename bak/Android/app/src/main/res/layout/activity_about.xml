<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="gov.android.com.superior.about.AboutActivity">


    <ImageView android:background="@mipmap/icon"
        android:layout_margin="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="left"
        android:lineSpacingExtra="3dp"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/dimgrey"
        android:text="政务督查客户端是博兴县人民政府发布政务任务和记录督查留痕的移动平台，由博兴县人民政府督查室主办，博兴县人民政府网运行中心负责运行维护。"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center_horizontal|bottom"
        android:lineSpacingExtra="3dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="35dp"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/dimgrey"
        android:text="版本：V 1.0.0"/>



</LinearLayout>
