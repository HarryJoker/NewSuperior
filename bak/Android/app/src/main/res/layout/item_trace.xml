<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView android:background="@color/lightgray"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="0dp" />

        <cn.carbs.android.avatarimageview.library.AvatarImageView
            android:id="@+id/lv_logo"
            app:aiv_BoarderWidth="2dp"
            app:aiv_TextSizeRatio="0.4"
            app:aiv_ShowBoarder="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:aiv_BoarderColor="@color/lightgray"
            app:aiv_TextColor="@color/colorPrimary"
            android:src="@mipmap/icon_minzheng"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView android:id="@+id/tv_vertical"
            android:background="@color/lightgray"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="1dp"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/tv_section"
            android:textColor="@color/darkText"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv_trace"
            android:textColor="@color/darkgray"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <gov.android.com.superior.view.NestGridView
            android:id="@+id/gv_attachment"
            android:layout_marginTop="2dp"
            android:numColumns="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </gov.android.com.superior.view.NestGridView>

        <LinearLayout android:id="@+id/layout_adrress"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView android:id="@+id/tv_mark"
                android:src="@mipmap/mark"
                android:layout_width="13dp"
                android:layout_height="13dp" />
            <TextView android:id="@+id/tv_address"
                android:textColor="@color/darkgray"
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView android:id="@+id/tv_time"
            android:textColor="@color/lightgray"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout android:id="@+id/layout_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_stateinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>