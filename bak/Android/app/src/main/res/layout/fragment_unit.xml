<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dp_5"
    android:paddingTop="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5"
    tools:context=".home.CensorFragment">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/shape_layer_gray">

                    <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/lv_logo"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_marginTop="@dimen/dp_10"
                        android:src="@mipmap/icon_mayun"
                        ptr:aiv_BoarderColor="@color/lightgray"
                        ptr:aiv_BoarderWidth="@dimen/dp_2"
                        ptr:aiv_ShowBoarder="true" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="文化局"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_16" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:text="王华"
                                android:textColor="#333"
                                android:textSize="@dimen/sp_15" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_1"
                            android:layout_margin="@dimen/dp_10"
                            android:background="@color/lightgray" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:divider="@drawable/dot_divider_white"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:showDividers="middle">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_sum_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="50"
                                    android:textColor="@color/red"
                                    android:textSize="@dimen/sp_16"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="共承担"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_marginBottom="@dimen/dp_2"
                                android:background="@color/lightgray" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_overdue_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="3"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="逾期"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_marginBottom="@dimen/dp_2"
                                android:background="@color/lightgray" />

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_back_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="4"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="退回"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="1px"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_2"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_marginBottom="@dimen/dp_2"
                                android:background="@color/lightgray" />

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_slow_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="4"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_16"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="较慢"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_15" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dp_5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_slow"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/icon_light_red"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="缓慢  10" />

                        <TextView
                            android:id="@+id/tv_nomal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:drawableLeft="@mipmap/icon_light_yellow"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="正常  23" />

                        <TextView
                            android:id="@+id/tv_fast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:drawableLeft="@mipmap/icon_light_green"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="较快  10" />

                        <TextView
                            android:id="@+id/tv_finish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:drawableLeft="@mipmap/icon_light_star"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="完成  10" />
                    </LinearLayout>

                </LinearLayout>

                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:orientation="horizontal">

                    <com.flyco.roundview.RoundTextView
                        android:id="@+id/tv_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待完善报送事项"
                        android:gravity="center"
                        android:layout_weight="1"
                        ptr:rv_backgroundColor="@color/tabbackground"
                        ptr:rv_textPressColor="#137af0"
                        ptr:rv_cornerRadius="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                    <com.flyco.roundview.RoundTextView
                        android:id="@+id/tv_veirfy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/dp_10"
                        ptr:rv_backgroundColor="@color/tabbackground"
                        ptr:rv_textPressColor="#137af0"
                        android:gravity="center"
                        ptr:rv_cornerRadius="@dimen/dp_5"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="待手签报送事项"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>


                <LinearLayout
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="责任事项"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="（进行中的事项）"
                            android:textColor="@color/dimgray"
                            android:textSize="@dimen/sp_14" />

                    </LinearLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rc_unit_task"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_layer_gray"/>

                </LinearLayout>

            </LinearLayout>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</FrameLayout>